<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/product.css">
<body>
<%- include('../includes/nav.ejs') %> 
<main>
    <h1>All Products To Select From</h1>
    <% if(prods.length > 0) {%> 
        <div class="grid">
            <% for(product of prods) {%> 
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%=product.title%></h1>
                    </header>
                    <div class="card__image">
                        <img src="https://dab1nmslvvntp.cloudfront.net/wp-content/uploads/jquery4u/2012/07/JavaScript-Programmers-Reference.jpg" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$<%=product.price%></h2>
                        <p class="product__description"><%=product.title%> is A very interesting book about so many even more interesting things!</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            <% } %> 
        </div>
    <%}else{%> 
        <h1 class="main-title">No Product Fond</h1>
    <% } %> 
</main>
<%- include('../includes/end.ejs') %> 